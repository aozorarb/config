set fileencodings=utf-8,cp932
set tabstop=2
set shiftwidth=2
set number
set cursorline
set hidden
set expandtab
" map
nnoremap <silent> [b :bprev<CR>
nnoremap <silent> ]b :bnext<CR>
nnoremap j gj
nnoremap k gk
nnoremap gj j
nnoremap gk k
map M %

" "_ is black hole register
nnoremap x "_x
nnoremap X "_D
" space map
nnoremap <Space>o   :<C-u>put =repeat(nr2char(10), v:count1)<CR>
nnoremap <Space>O   :<C-u>put! =repeat(nr2char(10), v:count1)<CR>'[
nnoremap <Space>q   :<C-u>exit<CR>
nnoremap <Space>w   :<C-u>write<CR>
" only macOS
nnoremap <Space>p+  :<C-u>write !pbcopy<CR>

set smartindent
set is
set wildmenu
set backspace=indent,eol,start
set showmatch
source $VIMRUNTIME/macros/matchit.vim " [%]を拡張
nnoremap <silent> <Esc><Esc> :nohlsearch<CR> " Escでhlsearch切り替え
" 24bitのtrue colorが使えないやつではコメントアウト
set termguicolors
if has('persistent_undo') " undoをファイルを閉じても繋がるように
	set undodir=/~/.config/vim_undo
	set undofile
endif

au BufRead,BufNewFile *.md set filetype=markdown
let g:previm_open_cmd = 'open -a Firefox'

